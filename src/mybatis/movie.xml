<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="Movies">
	<select id="getAdmin" parameterType="String" resultType="movie.AdminDataBean">
		select * from admin where adminId=#{adminId}
	</select>

	<select id="checkAdmin" parameterType="String" resultType="int">
		select count(*) from admin
	</select>
	
	<select id="getMovies" parameterType="java.util.Map" resultType="movie.MovieDataBean">
		select movieId,movieTitle,movieGenre,moviePosterDir,moviePosterOriName,moviePosterSysName,movieTags,movieAge,movieInfo,movieTime,movieDirector,movieActors,r 
			from (select movieId,movieTitle,movieGenre,moviePosterDir,moviePosterOriName,moviePosterSysName,movieTags,movieAge,movieInfo,movieTime,movieDirector,movieActors,@rownum := @rownum+1 as r
			from (select movieId,movieTitle,movieGenre,moviePosterDir,moviePosterOriName,moviePosterSysName,movieTags,movieAge,movieInfo,movieTime,movieDirector,movieActors,@rownum := 0 from movie)
			sub2 order by movieId desc) sub1
			where r &gt;= #{start} and r &lt;= #{end}
	</select>
	
	<select id="getMovieCount" resultType="int">
		select count(*) from movie
	</select>

	<select id="getMovie" parameterType="int" resultType="movie.MovieDataBean">
		select * from movie where movieId=#{movieId}
	</select>
	
	<insert id="insertMovie" parameterType="movie.MovieDataBean" useGeneratedKeys="true" keyProperty="movieId">
		insert into movie(movieTitle,movieGenre,moviePosterDir,moviePosterOriName,moviePosterSysName,movieTags,movieAge,movieInfo,movieTime,movieDirector,movieActors)
		values(#{movieTitle},#{movieGenre},#{moviePosterDir},#{moviePosterOriName},#{moviePosterSysName},#{movieTags},#{movieAge},#{movieInfo},#{movieTime},#{movieDirector},#{movieActors})
	</insert>
	
	<update id="updateMovie" parameterType="movie.MovieDataBean">
		update movie set movieTitle=#{movieTitle},movieGenre=#{movieGenre},moviePosterDir=#{moviePosterDir},
		moviePosterOriName=#{moviePosterOriName},moviePosterSysName=#{moviePosterSysName},movieTags=#{movieTags},
		movieAge=#{movieAge},movieInfo=#{movieInfo},movieTitle=#{movieTime},movieDirector=#{movieDirector},movieActors=#{movieActors} where movieId=#{movieId}
	</update>
	
	<delete id="deleteMovie" parameterType="int">
		delete from movie where movieId=#{movieId}
	</delete>
</mapper>